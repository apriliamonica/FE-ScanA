    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="ImageStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="Theme.HandScanAttendance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/yellow</item>

        
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/gray</item>

        
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
    <style name="Theme.PresensiTelapakTangan" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>
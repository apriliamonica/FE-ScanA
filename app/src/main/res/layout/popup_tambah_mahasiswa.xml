<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:descendantFocusability="beforeDescendants">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Mahasiswa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:paddingBottom="10dp" />

        <!-- Nama Lengkap -->
        <TextView android:text="Nama Lengkap" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_nama"
            style="@style/EditTextStyle" />

        <!-- NIM -->
        <TextView android:text="NIM" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_nim"
            style="@style/EditTextStyle"
            android:inputType="number" />

        <!-- Kata Sandi -->
        <TextView android:text="Kata Sandi" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_password"
            style="@style/EditTextStyle"
            android:inputType="textPassword" />

        <!-- Email -->
        <TextView android:text="Email" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_email"
            style="@style/EditTextStyle"
            android:inputType="textEmailAddress" />

        <!-- Nomor Telepon -->
        <TextView android:text="Nomor Telepon" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_no_telp"
            style="@style/EditTextStyle"
            android:inputType="phone" />

        <!-- Mata Kuliah -->
        <TextView android:text="Mata Kuliah" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_mata_kuliah"
            style="@style/EditTextStyle" />

        <!-- Kelas -->
        <TextView android:text="Kelas" style="@style/LabelStyle"/>
        <EditText
            android:id="@+id/input_kelas"
            style="@style/EditTextStyle" />

        <!-- Foto Telapak Tangan Kanan -->
        <TextView android:text="Foto Telapak Tangan Kanan" style="@style/LabelStyle"/>
        <ImageView
            android:id="@+id/img_foto_kanan"
            style="@style/ImageStyle" />
        <Button
            android:id="@+id/btn_upload_kanan"
            style="@style/ButtonStyle"
            android:text="Unggah" />

        <!-- Foto Telapak Tangan Kiri -->
        <TextView android:text="Foto Telapak Tangan Kiri" style="@style/LabelStyle"/>
        <ImageView
            android:id="@+id/img_foto_kiri"
            style="@style/ImageStyle" />
        <Button
            android:id="@+id/btn_upload_kiri"
            style="@style/ButtonStyle"
            android:text="Unggah" />

        <!-- Foto Wajah -->
        <TextView android:text="Foto Wajah" style="@style/LabelStyle"/>
        <ImageView
            android:id="@+id/img_foto_wajah"
            style="@style/ImageStyle" />
        <Button
            android:id="@+id/btn_upload_wajah"
            style="@style/ButtonStyle"
            android:text="Unggah" />

        <!-- Tombol Tambah -->
        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:backgroundTint="@color/yellow"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <!-- Logout Button -->
    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Logout"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- Logo -->

    <!-- Scan Kehadiran Button -->

    <!-- Menu Grid -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_logout">
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/btn_scan_kehadiran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp">

    </GridLayout>

    <Button
        android:id="@+id/btn_mata_kuliah"
        android:layout_width="108dp"
        android:layout_height="66dp"
        android:text="Mata Kuliah"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="559dp" />

    <Button
        android:id="@+id/btn_jadwal"
        android:layout_width="118dp"
        android:layout_height="72dp"
        android:text="Jadwal Perkuliahan"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/btn_daftar_mahasiswa"
        android:layout_width="119dp"
        android:layout_height="72dp"
        android:text="Daftar Mahasiswa"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/btn_riwayat_kehadiran"
        android:layout_width="123dp"
        android:layout_height="66dp"
        android:text="Riwayat Kehadiran"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="567dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo_scanA"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="scanA."
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="294dp" />

    <Button
        android:id="@+id/btn_scan_kehadiran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan Kehadiran"
        app:layout_constraintMarginTop="16dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="359dp" />

</androidx.constraintlayout.widget.ConstraintLayout>